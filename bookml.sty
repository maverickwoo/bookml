\ProcessOptions

% import latexml.sty if available, otherwise at least define \iflatexml
\IfFileExists{latexml.sty}{
  \RequirePackage{latexml}
}{
  \ifcsname iflatexml\endcsname\else\expandafter\newif\csname iflatexml\endcsname\latexmlfalse\fi
}

% HTML
\def\bmlHTMLEnvironment#1{\newenvironment{h:#1}[1][]{}{}}

% Raw HTML
