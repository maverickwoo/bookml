\def\bmlRawHTML#1{}

% Image generation via LaTeX
\ifbml@images
\RequirePackage[noconfig,delayed,active]{preview}
\let\bmlImageEnvironment\PreviewEnvironment
\else
\let\bmlImageEnvironment\@gobble
\fi

\newenvironment{bmlimage}{}{}
\bmlImageEnvironment{bmlimage}

