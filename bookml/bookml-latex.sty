\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{bookml}[2021/08/19 BookML: bookdown flavoured GitBook port for LaTeXML]

\newif\ifbmlGitBook
\bmlGitBooktrue

\DeclareOption{nogitbook}{\bmlGitBookfalse}
\DeclareOption{mathjax=2}{}
\DeclareOption{nomathjax}{}
\DeclareOption*{}

\ProcessOptions

% import latexml.sty if available, otherwise at least define \iflatexml
\IfFileExists{latexml.sty}{
  \RequirePackage{latexml}
}{
  \newif\iflatexml\latexmlfalse
}

% HTML
\def\bmlHTMLEnvironment#1{\newenvironment{h:#1}[1][]{}{}}

% Raw HTML
\RequirePackage[T1]{fontenc} % required for proper parsing of <, >
\def\bmlRawHTML#1{}

% Image generation via LaTeX
\RequirePackage[noconfig,delayed]{preview}
\def\bmlImageEnvironment#1{\PreviewEnvironment{#1}}

\newenvironment{bmlimage}{}{}
\bmlImageEnvironment{bmlimage}

% Alternative text
\newcommand\bmlDescription[1]{}

% Add class to previous node
\newcommand\bmlPlusClass[1]{}
